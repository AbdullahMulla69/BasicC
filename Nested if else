#include <stdio.h>
main()
{
    int a;
    printf("Enter a number= ");
    scanf("%d", &a);
    if (a!=0)
    {
        if (a>0)
        {
            printf("Number is Positive");
        }
        else
        {
            printf("Number is Negative");
        }
    }
    else
    {
        printf("Number is Zero");
    }
}
