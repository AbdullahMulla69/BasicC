#include<stdio.h>
swap(int *x, int *y)
{
    int z;
    z=*x; *x=*y; *y=z;
}
main()
{
    int a,b;
    printf("Enter value of a: ");
    scanf("%d",&a);
    printf("Enter value of b: ");
    scanf("%d",&b);
    printf("Before swapping: a= %d and b= %d\n",a,b);
    swap(&a,&b);
    printf("After swapping: a= %d and b= %d\n",a,b);
}
